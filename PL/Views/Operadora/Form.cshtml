@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ML.Operadora
<div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3>@ViewBag.Titulo</h3>
                <h5>Ingrese los datos de la operadora</h5>
                <hr />
            </div>
        </div>
    </div>
    @* <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script type="text/javascript" src="~/Scripts/Usuario/UsuarioJS.js"></script>*@
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Form", "Operadora", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                <div class="form-horizontal">

                    <div class="form-group" style="display: none;">
                        @Html.LabelFor(model => model.IdOperadora, new { @class = "control-label col-md-2 hidden" })
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.IdOperadora, new { @class = "form-control hidden" })
                            @Html.ValidationMessageFor(model => model.IdOperadora)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-group" style="display: none;">
                        @Html.LabelFor(model => model.NombreCorto, new { @class = "control-label col-md-2" })
                        </div>
                        <div class="control-label col-md-2">
                        @Html.Label("Nombre Corto")
                        </div>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.NombreCorto, new { @class = "form-control", @id = "txtNombreCorto", @placeholder="(No puede ir vacio)", autocomplete = "off" })
                            @Html.ValidationMessageFor(model => model.NombreCorto)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group" style="display: none;">
                        @Html.LabelFor(model => model.RazonSocial, new { @class = "control-label col-md-2" })
                        </div>
                        <div class="control-label col-md-2">
                            @Html.Label("Razon Social")
                        </div>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.RazonSocial, new { @class = "form-control", @id = "txtRazonSocial", @placeholder="(No puede ir vacio)", autocomplete = "off" })
                            @Html.ValidationMessageFor(model => model.RazonSocial)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Domicilio, new { @class = "control-label col-md-2" })
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.Domicilio, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Domicilio)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.RFC, new { @class = "control-label col-md-2" })
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.RFC, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RFC)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-2">
                            <div class="btn-group d-flex w-100" role="group">
                                <input type="submit" value="@ViewBag.Accion Guardar" class="btn btn-success" />
                            @Html.ActionLink("Regresar", "GetAll", "Operadora", htmlAttributes: new { @class = "btn btn-danger" })
                    </div>
                    </div>
                    </div>
                    </div>


            }
        </div>
    </div>


</div>