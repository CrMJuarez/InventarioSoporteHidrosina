@model ML.Usuario
@{
    //ViewBag.Title = "Login";
    Layout = null;
}
<title>@ViewData["Title"]Login - Hidrosina</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js" integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk" crossorigin="anonymous"></script>
<section class="vh-100">
    @using (Html.BeginForm("LoginContrasena", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="container-fluid h-custom">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-9 col-lg-6 col-xl-5">
                    <img src="~/Imagenes/HidrosinaLogin.png"
                     class="img-fluid" alt="Sample image">
                </div>

                <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                    <form>
                        <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                            <p class="lead fw-normal mb-0 me-3">Recuperar contraseña</p>
                        </div>
                      

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <input type="text" id="nombreusuario" name="nombreusuario" class="form-control form-control-lg"
                               placeholder="Ingresa nombre de usuario valido" />
                            <label class="form-label" for="nombreusuario">Nombre de usuario</label>
                        </div>


                        <!-- Password input -->

                        
                          
                       
                        <div class="d-flex justify-content-between align-items-center">
                        <div class="text-center text-lg-start mt-4 pt-2">
                            <button type="submit" class="btn btn-primary btn-success"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                                Recuperar
                            </button>
                           
                           
                        </div>
                            <div class="text-center text-lg-start mt-4 pt-2">
                         @Html.ActionLink("Regresar","Login","Login", htmlAttributes: new { @class = "btn btn-danger" })
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
        <div class="d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-4 px-4 px-xl-5 bg-primary">
            <!-- Copyright -->
            <div class="text-white mb-3 mb-md-0">
                Hidrosina © 2022 Todos los derechos Reservados.
            </div>

        </div>
    }
</section>