@model ML.DireccionEntrada
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <h2>Direcciones de entrada</h2>
    </div>

    <div class="row">
        <div class="col-md-8">
            <h5>Seleccione una direccion de entrada para editarla u el boton + para agregar una direccion...</h5>
            <hr />
        </div>
    </div>
    <div style="float:right;">
        @Html.ActionLink("+", "Form", "DireccionEntrada", htmlAttributes: new { @class = "btn btn-success" })
    </div>
    @if (Model.Direcciones == null)
    {
        <div class="p-3 mb-2 bg-danger text-white">Aun no hay direcciones registradas</div>
    }
    else
    {
        @*  <div style="overflow-x:auto;">*@


        <table class="table table-bordered">
            <thead>
                <tr style="color: White; background-color: #00B140; font-size: Medium; font-weight: bold; padding: 8px" role="row">

                    <td class="text-center">Editar</td>

                    <td style="display :none;">IdDireccionEntrada</td>
                    <td class="text-center">Nombre</td>
                    <td class="text-center">Direccion de entrada</td>
                    <td style="display :none;">IdOperadora</td>
                    <td class="text-center">Operadora</td>
                    @*<td class="text-center">ApellidoPaterno</td>
                <td class="text-center">ApellidoMaterno</td>*@


                    <td class="text-center">Eliminar</td>
                </tr>
            </thead>
            <tbody>
                @foreach (ML.DireccionEntrada direccionEntrada in Model.Direcciones)
                {
                    <tr>
                        <td class="text-center"><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "DireccionEntrada", new { IdDireccionEntrada = direccionEntrada.IdDireccionEntrada })"></a></td>

                        <td style="display :none;">@direccionEntrada.IdDireccionEntrada</td>

                        <td class="text-center">@direccionEntrada.Nombre</td>
                        <td>@(direccionEntrada.Direccion.Calle + " " + "Num. int:" + direccionEntrada.Direccion.NumeroInterior + " " + "Num. ext:" + direccionEntrada.Direccion.NumeroExterior + " " + direccionEntrada.Direccion.Colonia.Nombre + "," + " " + direccionEntrada.Direccion.Colonia.CodigoPostal + "," + " " + direccionEntrada.Direccion.Colonia.Municipio.Nombre + "," + " " + direccionEntrada.Direccion.Colonia.Municipio.Estado.Nombre + "," + " " + direccionEntrada.Direccion.Colonia.Municipio.Estado.Pais.Nombre + ".")</td>
                       
                        <td style="display :none;">@direccionEntrada.Operadora.IdOperadora</td>
                        <td class="text-center">@direccionEntrada.Operadora.NombreCorto</td>
                        <td class="text-center"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "DireccionEntrada", new { IdDireccionEntrada = direccionEntrada.IdDireccionEntrada})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
                    </tr>
                }

            </tbody>
        </table>
        @* </div>*@
    }
</div>
