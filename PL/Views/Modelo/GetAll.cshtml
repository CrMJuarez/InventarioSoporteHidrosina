@model ML.Modelo
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <h2>Alta de Marcas</h2>
    </div>

    <div class="row">
        <div class="col-md-8">
            <h5>Seleccione un Modelo para editarlo u el boton + para agregar un modelo...</h5>
            <hr />
        </div>
    </div>
    <div style="float:right;">
        @Html.ActionLink("+", "Form", "Modelo", htmlAttributes: new { @class = "btn btn-success" })
    </div>
    @if (Model.Modelos == null)
    {
        <div class="p-3 mb-2 bg-danger text-white">Aun no hay marcas registrados</div>
    }
    else
    {
        @*  <div style="overflow-x:auto;">*@


        <table class="table table-bordered">
            <thead>
                <tr style="color: White; background-color: #00B140; font-size: Medium; font-weight: bold; padding: 8px" role="row">

                    <td class="text-center">Editar</td>

                    <td style="display :none;">IdModelo</td>
                    <td class="text-center">Nombre</td>
                    <td class="text-center">Descripcion</td>
                    <td class="text-center">Marca</td>
                    @*<td class="text-center">ApellidoPaterno</td>
                <td class="text-center">ApellidoMaterno</td>*@


                    <td class="text-center">Eliminar</td>
                </tr>
            </thead>
            <tbody>
                @foreach (ML.Modelo modelo in Model.Modelos)
                {
                    <tr>
                        <td class="text-center"><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Modelo", new { IdModelo = modelo.IdModelo })"></a></td>

                        <td style="display :none;">@modelo.IdModelo</td>

                        <td class="text-center">@modelo.Nombre</td>
                        <td class="text-center">@modelo.Descripcion</td>
                        <td style="display :none;">@modelo.Marca.IdMarca</td>
                        <td class="text-center">@modelo.Marca.Nombre</td>
                        <td class="text-center"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Modelo", new { IdModelo = modelo.IdModelo})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
                    </tr>
                }

            </tbody>
        </table>
        @* </div>*@
    }
</div>

