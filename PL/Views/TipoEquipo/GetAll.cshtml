@model ML.TipoEquipo
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <h2>Alta de Tipo de equipo</h2>
    </div>

    <div class="row">
        <div class="col-md-8">
            <h5>Seleccione un Equipo para editarlo u el boton + para agregar una equipo...</h5>
            <hr />
        </div>
    </div>
    <div style="float:right;">
        @Html.ActionLink("+", "Form", "TipoEquipo", htmlAttributes: new { @class = "btn btn-success" })
    </div>
    @if (Model.Equipos == null)
    {
        <div class="p-3 mb-2 bg-danger text-white">Aun no hay equipos registradas</div>
    }
    else
    {
        @*  <div style="overflow-x:auto;">*@


        <table class="table table-bordered">
            <thead>
                <tr style="color: White; background-color: #00B140; font-size: Medium; font-weight: bold; padding: 8px" role="row">

                    <td class="text-center">Editar</td>

                    <td style="display :none;">IdTipoEquipo</td>
                    <td class="text-center">Nombre</td>
                   
                    @*<td class="text-center">ApellidoPaterno</td>
                <td class="text-center">ApellidoMaterno</td>*@


                    <td class="text-center">Eliminar</td>
                </tr>
            </thead>
            <tbody>
                @foreach (ML.TipoEquipo tipoEquipo in Model.Equipos)
                {
                    <tr>
                        <td class="text-center"><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "TipoEquipo", new { IdTipoEquipo = tipoEquipo.IdTipoEquipo })"></a></td>

                        <td style="display :none;">@tipoEquipo.IdTipoEquipo</td>

                        <td class="text-center">@tipoEquipo.Nombre</td>
                        
                        <td class="text-center"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "TipoEquipo", new { IdTipoEquipo = tipoEquipo.IdTipoEquipo})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
                    </tr>
                }

            </tbody>
        </table>
        @* </div>*@
    }
</div>
