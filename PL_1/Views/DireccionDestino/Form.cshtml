@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ML.DireccionDestino
<div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3>@ViewBag.Titulo</h3>
                <h5>Ingrese los datos de la direccion de destino</h5>
                <hr />
            </div>
        </div>
    </div>
    @* <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script type="text/javascript" src="~/Scripts/Usuario/UsuarioJS.js"></script>*@
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Form", "DireccionDestino", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                <div class="form-horizontal">

                    <div class="form-group" style="display: none;">
                        @Html.LabelFor(model => model.IdDireccionDestino, new { @class = "control-label col-md-2 hidden" })
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.IdDireccionDestino, new { @class = "form-control hidden" })
                            @Html.ValidationMessageFor(model => model.IdDireccionDestino)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Nombre, new { @class = "control-label col-md-2" })
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Nombre)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Calle, new { @class = "control-label col-md-2" })
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.Calle, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Calle)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group" style="display: none;">
                            @Html.LabelFor(model => model.NumeroInterior, new { @class = "control-label col-md-2" })
                        </div>
                        <div class="control-label col-md-2">
                            @Html.Label("Numero interior")
                        </div>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.NumeroInterior, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NumeroInterior)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group" style="display: none;">
                            @Html.LabelFor(model => model.NumeroExterior, new { @class = "control-label col-md-2" })
                        </div>

                        <div class="control-label col-md-2">
                            @Html.Label("Numero exterior")
                        </div>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.NumeroExterior, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NumeroExterior)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Colonia, new { @class = "control-label col-md-2" })
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.Colonia, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Colonia)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Municipio, new { @class = "control-label col-md-2" })
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.Municipio, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Municipio)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Estado, new { @class = "control-label col-md-2" })
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.Estado, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Estado)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group" style="display: none;">
                            @Html.LabelFor(model => model.CodigoPostal, new { @class = "control-label col-md-2" })
                        </div>
                        <div class="control-label col-md-2">
                            @Html.Label("Codigo Postal")
                        </div>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.CodigoPostal, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CodigoPostal)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Pais, new { @class = "control-label col-md-2" })
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.Pais, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Pais)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-3" style="display: none;">
                            @Html.LabelFor(model => model.Operadora.IdOperadora, new { @class = "control-label col-md-2" })
                            @Html.LabelFor(model => model.Operadora.IdOperadora, new { @class = "control-label col-md-2" })

                        </div>
                        <div class="control-label col-md-2">
                            @Html.Label("Operadoras")
                        </div>
                        <div class="col-md-3">
                            @Html.DropDownListFor(model => model.Operadora.IdOperadora, new SelectList(Model.Operadora.Operadoras, "IdOperadora", "NombreCorto"), "Selecciona una opcion", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-2">
                            <div class="btn-group d-flex w-100" role="group">
                                <input type="submit" value="@ViewBag.Accion Guardar" class="btn btn-success" />
                                @Html.ActionLink("Regresar", "GetAll", "DireccionDestino", htmlAttributes: new { @class = "btn btn-danger" })
                            </div>
                        </div>
                    </div>
                </div>


            }
        </div>
    </div>


</div>