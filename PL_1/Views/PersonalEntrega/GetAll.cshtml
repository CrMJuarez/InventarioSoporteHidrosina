@model ML.PersonalEntrega
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <h2>Personal de Entrega</h2>
    </div>

    <div class="row">
        <div class="col-md-8">
            <h5>Seleccione un personal para editarlo u el boton + para agregar un personal...</h5>
            <hr />
        </div>
    </div>
    <div style="float:right;">
        @Html.ActionLink("+", "Form", "PersonalEntrega", htmlAttributes: new { @class = "btn btn-success" })
    </div>
    @if (Model.Personales == null)
    {
        <div class="p-3 mb-2 bg-danger text-white">Aun no hay usuarios registrados</div>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr style="color: White; background-color: #00B140; font-size: Medium; font-weight: bold; padding: 8px" role="row">

                    <td class="text-center">Editar</td>

                    <td style="display :none;">IdPersonalEntrega</td>
                    <td class="text-center">Nombre</td>
                    @*<td class="text-center">ApellidoPaterno</td>
                <td class="text-center">ApellidoMaterno</td>*@


                    <td class="text-center">Eliminar</td>
                </tr>
            </thead>
            <tbody>
                @foreach (ML.PersonalEntrega personal in Model.Personales)
                {
                    <tr>
                        <td class="text-center"><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "PersonalEntrega", new { IdPersonalEntrega = personal.IdPersonalEntrega })"></a></td>

                        <td style="display :none;">@personal.IdPersonalEntrega</td>

                        <td class="text-center">@personal.Nombre @personal.ApellidoPaterno @personal.ApellidoMaterno</td>

                        <td class="text-center"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "PersonalEntrega", new { IdPersonalEntrega = personal.IdPersonalEntrega})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
                    </tr>
                }

            </tbody>
        </table>
    }
</div>

